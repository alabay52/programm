<Window x:Class="programm.Window.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:programm.Window"
        mc:Ignorable="d"
        Title="LoginWindow" Height="550" Width="900" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid>
            <!-- Две колонки -->
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="4*"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="100" />
                <RowDefinition Height="1*" />
            </Grid.RowDefinitions>




            <Grid.Background>
                <ImageBrush ImageSource="C:\Users\danil\source\repos\programm\programm\image\BACKGROUND.png"></ImageBrush>
            </Grid.Background>


            <!-- Правая часть: фон и форма -->
            <Grid Grid.Column="1" Margin="40" Grid.Row="1">
                <Grid.Background>
                    <LinearGradientBrush StartPoint="1,0" EndPoint="0,1">
                        <GradientStop Color="#D9D9D9" Offset="0"/>
                        <GradientStop Color="#D9D9D9" Offset="1"/>
                    </LinearGradientBrush>
                </Grid.Background>

              

                   



                <!-- Контент формы -->
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="350">
                    <TextBlock Text="Логин"
                           FontSize="20"
                           FontWeight="SemiBold"
                           Margin="0,0,0,20"/>

                    <TextBox x:Name="LoginBox"
                         Text="Логин"
                         FontSize="14"
                         Margin="0,0,0,10"/>

                    <PasswordBox x:Name="PasswordBox"
                             FontSize="14"
                             Margin="0,0,0,20"/>

                    <!-- Кнопка Войти -->
                    <Button x:Name="LoginButton"
                        Content="Войти"
                       FontSize="20"
                        Height="35"
                            Width="250"
                        Style="{StaticResource CapsuleButton}" 
                            Click="LoginButton_Click"
                        >
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}"
                                    CornerRadius="20">
                                    <ContentPresenter HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <!-- Ссылки и чекбокс -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
                        <TextBlock>
                        <Hyperlink NavigateUri="#" >Забыл пароль</Hyperlink>
                        </TextBlock>
                        <TextBlock Text="   "/>
                        <TextBlock>
                        <Hyperlink NavigateUri="#" >Регистрация</Hyperlink>
                        </TextBlock>
                    </StackPanel>

                    <CheckBox x:Name="RememberCheckBox"
                          Content="Запомнить меня"
                          HorizontalAlignment="Center"/>
                </StackPanel>
            </Grid>
            <Grid Grid.Row="0" Grid.ColumnSpan="2" Background="#D9D9D9">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100" />
                    <ColumnDefinition Width="150" />
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>
                <Image Source="/image/LOGO.png" VerticalAlignment="Center" />
                <TextBlock Grid.Column="1" TextWrapping="Wrap" Text="Прокат квадроциклов в Москве и области" VerticalAlignment="Center"/>

            </Grid>
            <Image Grid.Column="0" Grid.Row="1" Source="C:\Users\danil\source\repos\programm\programm\image\kvadro1.png" Height="200" Width="250" Stretch="UniformToFill"/>

        </Grid>

    </Grid>
</Window>