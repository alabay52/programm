<Window x:Class="programm.Windows.BookingHistoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:programm.Windows"
        mc:Ignorable="d"
        Title="BookingHistoryWindow" Height="1080" Width="1920" WindowStyle="None" WindowState="Maximized" WindowStartupLocation="CenterScreen">
    <Grid Background="#D9D9D9">
        <Grid.RowDefinitions>
            <RowDefinition Height="200" />
            <RowDefinition Height="880" />
            
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="20" />
                <ColumnDefinition Width="385" />
                <ColumnDefinition Width="20" />
                <ColumnDefinition Width="250" />
                <ColumnDefinition Width="20" />
                <ColumnDefinition Width="250" />
                <ColumnDefinition Width="20" />
                <ColumnDefinition Width="450" />
                <ColumnDefinition Width="100" />
                <ColumnDefinition Width="200" />
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="1*" />
                <RowDefinition Height="30" />
                <RowDefinition Height="1*" />
            </Grid.RowDefinitions>

            <TextBlock Grid.Column="8" FontSize="30" TextWrapping="Wrap" Grid.RowSpan="3" Text="Данный раздел предназначен для работы бронью"/>


            <Button Grid.Row="0" Grid.Column="4"  Height="60" Width="230" Content="Бронирование" Style="{StaticResource CapsuleButton}" />
            <Button Grid.Row="0" Grid.Column="6"   Height="60" Width="230" Content="Координация" Style="{StaticResource CapsuleButton}" />
            <Button Grid.Column="4" Grid.Row="2"  Height="60" Width="220" Content="Техника" Style="{StaticResource CapsuleButton}" />

            <TextBlock Grid.Column="2" FontSize="30" TextWrapping="Wrap" VerticalAlignment="Center" Grid.RowSpan="3" Text="Прокат квадроциклов в Москве и области"/>
            <Image Source="/image/LOGO.png" Grid.RowSpan="3" Height="200" Width="200"/>
            <Image Source="/image/PROFILE.png" Grid.RowSpan="3" Height="200" Width="200" Grid.Column="10"/>

        </Grid>






        <Grid Grid.Row="1">
            <Grid.Background>
                <ImageBrush ImageSource="C:\Users\danil\source\repos\programm\programm\image\BACKGROUND.png"></ImageBrush>
            </Grid.Background>
            <Grid Margin="100" Background="#D9D9D9">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="800" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="100" />
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="80" />
                </Grid.RowDefinitions>
                <TextBlock Text="История бронирования техника" FontSize="35" Grid.ColumnSpan="2" TextAlignment="Center"/>
                <Grid Grid.Row="1" Grid.Column="1" Margin="60" Background="White">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="200" />
                        <ColumnDefinition Width="20" />
                        <ColumnDefinition Width="550" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="10" />
                        <RowDefinition Height="1*" />
                        <RowDefinition Height="20" />
                        <RowDefinition Height="1*" />
                        <RowDefinition Height="20" />
                        <RowDefinition Height="1*" />
                        <RowDefinition Height="20" />
                        <RowDefinition Height="1*" />
                        <RowDefinition Height="20" />
                        <RowDefinition Height="1*" />
                    </Grid.RowDefinitions>
                    <Button Grid.Column="2" Grid.Row="9" Content="Скачать" Height="55" Width="300" Style="{StaticResource CapsuleButton}"/>
                    <TextBlock Grid.Column="0" Grid.Row="1" FontSize="25" TextAlignment="Right" Text="ФИО:"/>
                    <TextBlock Grid.Column="0" Grid.Row="3" FontSize="25" TextAlignment="Right" Text="Телефон:"/>
                    <TextBlock Grid.Column="0" Grid.Row="5" FontSize="25" TextAlignment="Right" Text="Дата Аренды:"/>
                    <TextBlock Grid.Column="0" Grid.Row="7" FontSize="25" TextAlignment="Right" Text="Сумма:"/>
                    <TextBox Grid.Column="2" Grid.Row="1" Width="350"/>
                    <TextBox Grid.Column="2" Grid.Row="3" Width="350"/>
                    <TextBox Grid.Column="2" Grid.Row="5" Width="350"/>
                    <TextBox Grid.Column="2" Grid.Row="7" Width="350"/>
                </Grid>
                
                <Button Name="BackBtn" Click="BackBtn_Click" Grid.ColumnSpan="2" Grid.Row="2" Content="Назад" Height="70" Width="300" Style="{StaticResource CapsuleButton}"/>
               
            </Grid>
        </Grid>
    </Grid>
</Window>
