<Window x:Class="programm.Windows.MaintenanceRegistrationTechnWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:programm.Windows"
        mc:Ignorable="d"
        Title="MaintenanceRegistrationTechnWindow" Height="1080" Width="1920" WindowStyle="None" WindowState="Maximized" WindowStartupLocation="CenterScreen">
    <Grid Background="#D9D9D9">
        <Grid.RowDefinitions>
            <RowDefinition Height="200" />
            <RowDefinition Height="880" />

        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="20" />
                <ColumnDefinition Width="385" />
                <ColumnDefinition Width="20" />
                <ColumnDefinition Width="250" />
                <ColumnDefinition Width="20" />
                <ColumnDefinition Width="250" />
                <ColumnDefinition Width="20" />
                <ColumnDefinition Width="450" />
                <ColumnDefinition Width="100" />
                <ColumnDefinition Width="200" />
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="1*" />
                <RowDefinition Height="30" />
                <RowDefinition Height="1*" />
            </Grid.RowDefinitions>

            <TextBlock Grid.Column="8" FontSize="30" TextWrapping="Wrap" Grid.RowSpan="3" Text="Данный раздел предназначен для работы техникой"/>


            <Button Grid.Row="0" Grid.Column="4"  Height="60" Width="230" Content="Бронирование" Style="{StaticResource CapsuleButton}" />
            <Button Grid.Row="0" Grid.Column="6"   Height="60" Width="230" Content="Координация" Style="{StaticResource CapsuleButton}" />
            <Button Grid.Column="4" Grid.Row="2"  Height="60" Width="220" Content="Техника" Style="{StaticResource CapsuleButton}" />

            <TextBlock Grid.Column="2" FontSize="30" TextWrapping="Wrap" VerticalAlignment="Center" Grid.RowSpan="3" Text="Прокат квадроциклов в Москве и области"/>
            <Image Source="/image/LOGO.png" Grid.RowSpan="3" Height="200" Width="200"/>
            <Image Source="/image/PROFILE.png" Grid.RowSpan="3" Height="200" Width="200" Grid.Column="10"/>

        </Grid>






        <Grid Grid.Row="1">
            <Grid.Background>
                <ImageBrush ImageSource="C:\Users\danil\source\repos\programm\programm\image\BACKGROUND.png"></ImageBrush>
            </Grid.Background>
            <Grid Margin="100" Background="#D9D9D9">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="800" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="100" />
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="80" />
                </Grid.RowDefinitions>
                <Grid Grid.Row="1" Margin="30">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="20" />
                        <ColumnDefinition Width="1*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*" />
                        <RowDefinition Height="20" />
                        <RowDefinition Height="50" />
                        <RowDefinition Height="20" />
                        <RowDefinition Height="1*" />
                        <RowDefinition Height="20" />
                        <RowDefinition Height="1*" />
                        <RowDefinition Height="20" />
                        <RowDefinition Height="1*" />
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="2" Text="ИЛИ" FontSize="25" TextAlignment="Center" Opacity="0.5" VerticalAlignment="Bottom" />
                    <TextBlock Grid.Row="4" Text="Найти по названию:" FontSize="25" TextAlignment="Center" />
                    <TextBlock Grid.Row="0" Text="Выбрать из списка:"  FontSize="25" TextAlignment="Center" VerticalAlignment="Bottom" />
                    <TextBlock Grid.Row="6" Text="Укажите дату:" TextWrapping="Wrap"  FontSize="25" TextAlignment="Center"  />
                    <TextBlock Grid.Row="8" Text="Укажите причину:"  FontSize="25" TextAlignment="Center"  />
                    <TextBox Grid.Row="4" Grid.Column="2" Height="50" Width="350" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                    <TextBox Grid.Row="6" Grid.Column="2" Height="50" Width="350" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                    <TextBox Grid.Row="8" Grid.Column="2" Height="50" Width="350" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                    <ComboBox Grid.Column="2" Grid.Row="0" Height="50" Width="350" VerticalAlignment="Bottom" HorizontalAlignment="Left"/>
                </Grid>
                <TextBlock Grid.Column="2" Grid.Row="1" FontSize="60" Text="ТУТ БУДЕТ ФОТО"/>


                <TextBlock Text="Заявка на ТО" FontSize="35" Grid.ColumnSpan="2" TextAlignment="Center"/>


                <Button Name="BackBtn" Click="BackBtn_Click" Grid.ColumnSpan="2" Grid.Row="2" Content="Назад" Height="70" Width="300" Style="{StaticResource CapsuleButton}"/>

            </Grid>
        </Grid>
    </Grid>
</Window>
