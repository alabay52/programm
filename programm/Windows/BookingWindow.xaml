<Window x:Class="programm.Window.BookingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:programm.Window"
        mc:Ignorable="d"
                Title="MainWindow" Height="1080" Width="1920" WindowStyle="None" WindowState="Maximized" WindowStartupLocation="CenterScreen">
    <Grid Background="#D9D9D9">
        <Grid.RowDefinitions>
            <RowDefinition Height="200" />
            <RowDefinition Height="880" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="20" />
                <ColumnDefinition Width="385" />
                <ColumnDefinition Width="20" />
                <ColumnDefinition Width="250" />
                <ColumnDefinition Width="20" />
                <ColumnDefinition Width="250" />
                <ColumnDefinition Width="20" />
                <ColumnDefinition Width="450" />
                <ColumnDefinition Width="100" />
                <ColumnDefinition Width="200" />
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="1*" />
                <RowDefinition Height="30" />
                <RowDefinition Height="1*" />
            </Grid.RowDefinitions>

            <TextBlock Grid.Column="8" FontSize="30" TextWrapping="Wrap" Grid.RowSpan="3" Text="Данный раздел предназначен для работы бронью"/>


            <Button Grid.Row="0" Grid.Column="4"  Height="60" Width="230" Content="Бронирование" Style="{StaticResource CapsuleButton}" />
            <Button Grid.Row="0" Grid.Column="6"   Height="60" Width="230" Content="Координация" Style="{StaticResource CapsuleButton}" />
            <Button Grid.Column="4" Grid.Row="2"  Height="60" Width="220" Content="Техника" Style="{StaticResource CapsuleButton}" />

            <TextBlock Grid.Column="2" FontSize="30" TextWrapping="Wrap" VerticalAlignment="Center" Grid.RowSpan="3" Text="Прокат квадроциклов в Москве и области"/>
            <Image Source="/image/LOGO.png" Grid.RowSpan="3" Height="200" Width="200"/>
            <Image Source="/image/PROFILE.png" Grid.RowSpan="3" Height="200" Width="200" Grid.Column="10"/>

        </Grid>






        <Grid Grid.Row="1">
            <Grid.Background>
                <ImageBrush ImageSource="C:\Users\danil\source\repos\programm\programm\image\BACKGROUND.png"></ImageBrush>
            </Grid.Background>
            <Grid Margin="40" Background="#D9D9D9">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="10" />
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="10" />
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="10" />
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="150" />
                    <RowDefinition Height="1*" />
                </Grid.RowDefinitions>

                <Button Name="statusEquipmentBtn" Click="statusEquipmentBtn_Click" Grid.Column="0" Content="Статус техники" Height="100" Width="300" Style="{StaticResource CapsuleButton}"/>
                <Button Grid.Column="2"   Height="100" Width="300" Style="{StaticResource CapsuleButton}">
                    <TextBlock Text="Подтверждение онлайн бронирования" TextWrapping="Wrap" TextAlignment="Center"/>
                </Button>
                <Button Name="AddReservation" Click="AddReservation_Click" Grid.Column="4"  Height="100" Width="300" Style="{StaticResource CapsuleButton}">
                    <TextBlock Text="Добавление бронирования" TextWrapping="Wrap" TextAlignment="Center"/>
                </Button>
                <Button Grid.Column="6" Content="История бронирования " Height="100" Width="300" Style="{StaticResource CapsuleButton}"/>
            </Grid>
        </Grid>
    </Grid>
</Window>
