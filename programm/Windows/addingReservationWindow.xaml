<Window x:Class="programm.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:programm"
        mc:Ignorable="d"
        Title="MainWindow" Height="1080" Width="1920" WindowStyle="None" WindowState="Maximized" WindowStartupLocation="CenterScreen">
    <Grid Background="#D9D9D9">
        <Grid.RowDefinitions>
            <RowDefinition Height="200" />
            <RowDefinition Height="880" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="20" />
                <ColumnDefinition Width="385" />
                <ColumnDefinition Width="20" />
                <ColumnDefinition Width="250" />
                <ColumnDefinition Width="20" />
                <ColumnDefinition Width="250" />
                <ColumnDefinition Width="20" />
                <ColumnDefinition Width="450" />
                <ColumnDefinition Width="100" />
                <ColumnDefinition Width="200" />
            </Grid.ColumnDefinitions>
            
            <Grid.RowDefinitions>
                <RowDefinition Height="1*" />
                <RowDefinition Height="30" />
                <RowDefinition Height="1*" />
            </Grid.RowDefinitions>

            <TextBlock Grid.Column="8" FontSize="30" TextWrapping="Wrap" Grid.RowSpan="3" Text="Данный раздел предназначен для работы бронью"/>


            <Button Grid.Row="0" Grid.Column="4" FontWeight="Black"  Height="60" Width="230" Content="Бронирование" Style="{StaticResource CapsuleButton}" />
            <Button Grid.Row="0" Grid.Column="6"   Height="60" Width="230" Content="Координация" Style="{StaticResource CapsuleButton}" />
            <Button Name="TechnikBtn" Click="TechnikBtn_Click" Grid.Column="4" Grid.Row="2"  Height="60" Width="220" Content="Техника" Style="{StaticResource CapsuleButton}" />

            <TextBlock Grid.Column="2" FontSize="30" TextWrapping="Wrap" VerticalAlignment="Center" Grid.RowSpan="3" Text="Прокат квадроциклов в Москве и области"/>
            <Image Source="/image/LOGO.png" Grid.RowSpan="3" Height="200" Width="200"/>
            <Image Source="/image/PROFILE.png" Grid.RowSpan="3" Height="200" Width="200" Grid.Column="10"/>

        </Grid>
        
        
        
        
        
        
        <Grid Grid.Row="1">
            <Grid.Background>
                <ImageBrush ImageSource="C:\Users\danil\source\repos\programm\programm\image\BACKGROUND.png"></ImageBrush>
            </Grid.Background>
            <Grid Margin="40" Background="#D9D9D9">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="10" />
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="100" />
                </Grid.RowDefinitions>
                <Button Grid.Row="1" Grid.Column="0" Height="60" Width="230" Content="Сохранить" HorizontalAlignment="Right" Style="{StaticResource CapsuleButton}"/>
                <Button Grid.Row="1" Grid.Column="2" Height="60" Width="230" Content="Удалить" HorizontalAlignment="Left" Style="{StaticResource CapsuleButton}"/>
                <Button Name="BackBtn" Click="BackBtn_Click" Grid.Row="1" Grid.Column="2" Height="60" Width="230" Content="Назад" HorizontalAlignment="Right" Style="{StaticResource CapsuleButton}"/>
                <Grid Grid.Column="0" Margin="20 100">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="300" />
                        <ColumnDefinition Width="1*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="50" />
                        <RowDefinition Height="10" />
                        <RowDefinition Height="50" />
                        <RowDefinition Height="10" />
                        <RowDefinition Height="50" />
                        <RowDefinition Height="10" />
                        <RowDefinition Height="50" />
                        <RowDefinition Height="10" />
                        <RowDefinition Height="50" />
                        <RowDefinition Height="10" />
                        <RowDefinition Height="50" />
                        <RowDefinition Height="10" />
                        <RowDefinition Height="50" />
                     
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0" Text="Введите ФИО клиента" FontSize="25"/>
                    <TextBlock Grid.Row="2" Text="Контактный телефон" FontSize="25"/>
                    <TextBlock Grid.Row="4" Text="Серия и номер паспорта" FontSize="25"/>
                    <TextBlock Grid.Row="6" Text="Название техники" FontSize="25"/>
                    <TextBlock Grid.Row="8" Text="Дата бронирования" FontSize="25"/>
                    <TextBlock Grid.Row="10" Text="Количество часов" FontSize="25"/>
                    <TextBlock Grid.Row="12" Text="Сумма " FontSize="25" HorizontalAlignment="Right"/>
                    <TextBox Grid.Column="1" Grid.Row="0"/>
                    <TextBox Grid.Column="1" Grid.Row="2"/>
                    <TextBox Grid.Column="1" Grid.Row="4"/>
                    <TextBox Grid.Column="1" Grid.Row="6"/>
                    <TextBox Grid.Column="1" Grid.Row="8"/>
                    <TextBox Grid.Column="1" Grid.Row="10"/>
                    <TextBox Grid.Column="1" Grid.Row="12" Width="300" HorizontalAlignment="Left"/>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</Window>
